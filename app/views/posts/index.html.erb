<h1>All Blog Posts</h1>
<% @posts.each do |post| %>
	<div class="card" style="background-color: #ededed; border-color: #ededed;">
		 <div class="card-block">
			<h3><%= post.title %></h3>
			<p><%= post.body %></p>
			<%= link_to "Read More", post_path(post), :class => 'btn btn-info' %>
		</div>
	</div>
	<br>
<% end %>